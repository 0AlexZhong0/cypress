{
  "name": "@packages/runner",
  "version": "0.0.0",
  "main": "lib/runner.js",
  "private": true,
  "scripts": {
    "postinstall": "echo '@packages/runner needs: npm run build'",
    "prebuild": "npm run check-deps-pre && rebuild-node-sass",
    "build": "webpack --progress",
    "prebuild-prod": "npm run check-deps-pre",
    "build-prod": "webpack --mode=production",
    "prewatch": "npm run check-deps-pre",
    "watch": "cross-env DEV_SERVER=1 webpack-dev-server --progress",
    "check-deps": "node ../../scripts/check-deps.js --verbose",
    "check-deps-pre": "npm run check-deps -- --prescript",
    "clean": "zunder clean",
    "clean-deps": "rm -rf node_modules",
    "pretest": "npm run check-deps-pre",
    "test": "node ./scripts/test.js",
    "test-reporter": "cross-env NODE_ENV=test mochapack '../reporter/test/index.spec.js'",
    "test-reporter-watch": "cross-env NODE_ENV=test mochapack '../reporter/test/index.spec.js' --watch",
    "build-reporter": "cross-env NODE_ENV=reporter webpack",
    "build-reporter-watch": "cross-env NODE_ENV=reporter webpack --watch",
    "lint": "bin-up eslint --fix scripts/*.js src/*.js* src/**/*.js*"
  },
  "files": [
    "dist",
    "lib"
  ],
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-proposal-decorators": "^7.3.0",
    "@babel/plugin-proposal-object-rest-spread": "7.4.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@cypress/react-tooltip": "0.4.0",
    "@types/copy-webpack-plugin": "^4.4.3",
    "@types/html-webpack-plugin": "^3.2.0",
    "@types/webpack": "^4.4.25",
    "@types/webpack-dev-server": "^3.1.5",
    "babel-loader": "^8.0.5",
    "bin-up": "1.2.0",
    "bluebird": "3.5.0",
    "chai": "4.2.0",
    "chai-enzyme": "1.0.0-beta.1",
    "classnames": "2.2.6",
    "clean-webpack-plugin": "^2.0.2",
    "coffee-loader": "^0.9.0",
    "coffeescript": "^2.3.2",
    "copy-webpack-plugin": "^5.0.1",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "enzyme": "3.9.0",
    "enzyme-adapter-react-16": "1.12.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^3.0.1",
    "font-awesome": "4.7.0",
    "happypack": "^5.0.1",
    "html-webpack-plugin": "^3.2.0",
    "ignore-loader": "^0.1.2",
    "jest": "^24.7.1",
    "jsdom": "13.2.0",
    "lodash": "4.17.11",
    "mini-css-extract-plugin": "^0.5.0",
    "mobx": "3.6.2",
    "mobx-react": "4.4.3",
    "mocha-loader": "^2.0.1",
    "mocha-webpack": "^1.1.0",
    "mochapack": "^1.1.1",
    "node-sass": "^4.11.0",
    "node-sass-glob-importer": "^5.3.0",
    "prop-types": "15.7.2",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-input-autosize": "2.2.1",
    "rebuild-node-sass": "1.1.0",
    "resolve-url-loader": "^3.0.1",
    "sass-loader": "^7.1.0",
    "sinon": "7.0.0",
    "sinon-chai": "3.3.0",
    "style-loader": "^0.23.1",
    "ts-node": "^8.0.3",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.3.1",
    "webpack-node-externals": "^1.7.2",
    "zunder": "6.4.1"
  }
}
