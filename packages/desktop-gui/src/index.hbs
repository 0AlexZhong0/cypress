<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Cypress</title>
  {{#each stylesheets}}
    <link rel="stylesheet" href="{{this}}" />
  {{/each}}
</head>
<body>
  <div id="app"></div>

  <script src="vendor.js"></script>
  {{#each scripts}}
    <script src="{{this}}"></script>
  {{/each}}
  <script>

    if (!!window.Cypress) {
      window.env = 'test'
    } else {
      window.env = '{{env.NODE_ENV}}'
    }

    if (window.env === 'development') {
      // this allows React DevTools to work in an iframe
      // (if we're in Cypress running our app)
      __REACT_DEVTOOLS_GLOBAL_HOOK__ = parent.__REACT_DEVTOOLS_GLOBAL_HOOK__
    }

    // temporarily here for development purposes
    // needs to be moved into server
    window.projectPath = '/Users/chrisbreiding/Dev/cypress/_playground'

    if (!window.Cypress) {
      App.start({ projectPath: window.projectPath })
    }
  </script>
</body>
</html>
