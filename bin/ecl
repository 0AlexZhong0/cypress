#!/usr/bin/env node

nodemon = require('nodemon')
path = require('path')

eclRoot = path.join(__dirname, "..", "lib");
eclServer = path.join(__dirname, "server_boot.js");

str = "--verbose --watch " + eclRoot + "/**/*.coffee " + eclServer + " " + process.cwd();

nodemon('-e "coffee js" --watch ' + eclRoot + " " + eclServer + " " + process.cwd())
.on("start", function() {
  console.log(":: nodemon started")
})
