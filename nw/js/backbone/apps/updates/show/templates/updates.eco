<div id="updates">
  <% if @version: %>
    <p class="version">
      <b>Current Version: </b>
      <span><%= @version %></span>
    </p>
  <% end %>
  <% if @state: %>
    <span>
      <i class="fa fa-spinner fa-spin"></i>
      <%= @stateFormatted %>
    </span>
    <% if @finished: %>
      <button class="btn btn-primary"><%= @buttonFormatted %></button>
    <% end %>
  <% end %>
</div>