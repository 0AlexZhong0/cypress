<div class="command-wrapper">
  <span class="command-number">
    <%= @number %>
  </span>
  <span class="command-method"><%= @method %></span>
  <% if @response?: %>
    <span class="command-response">
      <% if @status?: %>
        <i class="fa fa-circle <%= if @status is 200 then 'successful' else if 404 then 'bad' else '' %>"></i>
        <span class="command-status">
          <%= @status %>
        </span>
      <% end %>
      <span class="command-body"><%= @response %></span>
      <% if @truncated: %>
        <i class="fa fa-ellipsis-h"></i>
      <% end %>
    </span>
  <% else: %>
    <span class="command-request"><%= @url %></span>
  <% end %>
  <% if @error: %>
    <span class="command-error"><%= @error %></span>
  <% end %>
  <% if @shouldDisplayControls: %>
    <span class="command-controls">
      <!-- <i class="fa fa-pause"></i> -->
      <i class="fa fa-search fa-flip-horizontal"></i>
    </span>
  <% end %>
</div>