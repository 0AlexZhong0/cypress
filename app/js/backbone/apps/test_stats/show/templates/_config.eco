<% if @paused: %>
  <ul id="pause-controls" class="list-unstyled">
    <li>
      <label class="label label-info">Paused</label>
    </li>
    <li>
      <button data-js-resume type="button" class="btn btn-default btn-xs">
        <i class="fa fa-play"></i>
        <span>Resume</span>
      </button>
    </li>
    <% if @nextCmd: %>
      <li>
        <button data-js-next type="button" class="btn btn-default btn-xs">
          <i class="fa fa-step-forward"></i>
          <span>Next: <%= @nextCmd %></span>
        </button>
      </li>
    <% end %>
  </ul>
<% end %>

