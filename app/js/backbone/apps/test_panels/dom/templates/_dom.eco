<div class="meta-container">
  <div class="content-icon">
    <i class="fa"></i>
  </div>
  <div class="content-identifer">
    <span class="content-parent"><%= @parent %></span>
    <span class="content-divider">/</span>
    <span class="content-title"><%= @title %></span>
  </div>
  <span class="content-msg">
    <span class="content-selector-container">
      <span class="content-method"><%= @method %></span>
      <span class="content-selector"><%= "#{@selector}" %></span>
    </span>
  </span>
</div>
<% if @chosen: %>
  <div class="details-container">
    <i class="fa fa-times"></i>
    <div class="actions-container">
      <span class="icon-wrapper" data-js="revert">
        <i class="fa fa-search"></i>
      </span>
      <span class="icon-wrapper" data-js="play">
        <i class="fa fa-play"></i>
      </span>
    </div>
    <dl class="dl-horizontal">
      <dt>id</dt>
      <dd><%= @testId %></dd>
      <% if @parent: %>
        <dt>parent</dt>
        <dd><%= @parent %></dd>
      <% end %>
      <dt>title</dt>
      <dd><%= @title %></dd>
      <dt>method</dt>
      <dd><%= @method %></dd>
      <dt>element</dt>
      <dd><%= "<#{@selector}>" %></dd>
      <% if @error: %>
        <dt>error</dt>
        <dd><%= @error %></dd>
      <% end %>
    </dl>
  </div>
<% end %>